<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="28dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/txt_repository_name"
                    android:text="Repository name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginLeft="16dp" />

            <TextView
                    android:id="@+id/lbl_description"
                    android:text="Description:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_repository_name"
                    android:layout_marginLeft="16dp" />
            <TextView
                    android:id="@+id/txt_desccription"
                    android:text="Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_description"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="@+id/lbl_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="8dp" />
            <TextView
                    android:text="Id:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_id"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_desccription"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp" />
            <TextView
                    android:text="Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_id"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_id"
                    app:layout_constraintTop_toTopOf="@+id/lbl_id"
                    android:layout_marginLeft="8dp" />
            <TextView
                    android:id="@+id/lbl_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Full Name:"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_id" android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp" />
            <TextView
                    android:id="@+id/txt_fullname"
                    android:text="Full Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_fullname"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="@+id/lbl_fullname"
                    android:layout_marginLeft="8dp" />
            <TextView
                    android:text="Organization:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_organization"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_fullname"
                    android:layout_marginLeft="16dp" />
            <TextView
                    android:text="Organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_organization" android:textColor="#000000"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_organization"
                    app:layout_constraintTop_toTopOf="@+id/lbl_organization"
                    android:layout_marginLeft="8dp" />
            <TextView
                    android:id="@+id/lbl_private"
                    android:text="Private:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_organization"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp" />

            <TextView
                    android:id="@+id/txt_private"
                    android:text="private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="@+id/lbl_private"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_private"
                    android:layout_marginLeft="8dp" />
            <TextView
                    android:id="@+id/lbl_language"
                    android:text="Language:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_private"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="#000000" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp" />

            <TextView
                    android:id="@+id/txt_language"
                    android:text="Language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/lbl_language"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="@+id/lbl_language"
                    android:layout_marginLeft="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>