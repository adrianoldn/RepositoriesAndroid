<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    <com.google.android.material.card.MaterialCardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:focusable="true"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="2dp"
                >

            <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gl_left"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="8dp"/>

            <TextView
                    android:id="@+id/repositoty_item_name"
                    android:text="Name"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/gl_left"/>

            <TextView
                    android:id="@+id/item_fullname"
                    android:text="Fullname:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintTop_toBottomOf="@+id/repositoty_item_name" android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/gl_left"/>

            <TextView
                    android:id="@+id/lbl_fullname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintStart_toEndOf="@id/item_fullname"
                    app:layout_constraintTop_toTopOf="@+id/item_fullname"
                    />


            <TextView
                    android:id="@+id/item_organization"
                    android:text="Organization: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_fullname"
                    app:layout_constraintStart_toStartOf="@+id/gl_left"/>

            <TextView
                    android:id="@+id/lbl_organization"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintStart_toEndOf="@+id/item_organization"
                    app:layout_constraintTop_toTopOf="@+id/item_organization"
                    />


            <TextView
                    android:id="@+id/item_language"
                    android:text="Language:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_organization"
                    app:layout_constraintStart_toStartOf="@+id/gl_left"/>


            <TextView
                    android:id="@+id/lbl_language"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintStart_toEndOf="@+id/item_language"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toTopOf="@+id/item_language"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
